<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Hoso">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toobarchat"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/white"
            android:theme="@style/AppTheme">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left">
                <ImageButton
                    android:id="@+id/backc"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_back"
                    android:layout_width="wrap_content"
                    android:background="@color/white"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <TextView
            android:fontFamily="@font/cabin"
            android:id="@+id/kanas"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="Kết quả khám"/>
        <TextView
            android:fontFamily="@font/cabin"

            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="(dành cho bệnh nhân)"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/ladk"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="Ảnh đại diện"/>
        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:visibility="gone"
            android:id="@+id/avatar_user"
            android:layout_gravity="center"
            android:src="@drawable/ic_face"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />


        <TextView
            android:fontFamily="@font/cabin"
            android:id="@+id/kaskas"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Chuẩn đoán ban đầu"/>
        <EditText
            android:fontFamily="@font/cabin"
            android:id="@+id/tv0"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="15dp"
            android:background="@drawable/skip_button"
            android:drawablePadding="8dp"
            android:drawableTint="@color/themeColor"
            android:hint="Chuẩn đáng ban đầu"
            android:inputType="text"
            android:padding="16dp" />
        <TextView
            android:fontFamily="@font/cabin"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Tên và nguồn gốc bệnh"/>
        <EditText
            android:fontFamily="@font/cabin"

            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="15dp"
            android:background="@drawable/skip_button"
            android:drawablePadding="8dp"
            android:drawableTint="@color/themeColor"
            android:hint="Tên và nguồn gốc bệnh"
            android:inputType="text"
            android:padding="16dp" />


        <androidx.cardview.widget.CardView
            app:cardCornerRadius="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp">
            <ImageView
                android:id="@+id/image_post_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#A9A9A9	"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:fontFamily="@font/cabin"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Nguyên nhân gây bệnh "/>
        <EditText
            android:fontFamily="@font/cabin"

            android:id="@+id/tv5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:textSize="16dp"
            android:background="@drawable/skip_button"
            android:drawablePadding="8dp"
            android:drawableTint="@color/themeColor"
            android:hint="Nguyên nhân gây bệnh"
            android:paddingTop="10dp"
            android:paddingLeft="16dp"
            android:inputType="textEmailAddress"
            android:paddingRight="35dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:fontFamily="@font/cabin"

            android:id="@+id/zxczc"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Lời khuyên bác sĩ ?"/>
        <EditText
            android:fontFamily="@font/cabin"

            android:id="@+id/tv6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:textSize="16dp"
            android:background="@drawable/skip_button"
            android:drawablePadding="8dp"
            android:drawableTint="@color/themeColor"
            android:hint="Lời Khuyên bác sĩ"
            android:paddingTop="10dp"
            android:paddingLeft="16dp"
            android:inputType="textEmailAddress"
            android:paddingRight="35dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:fontFamily="@font/cabin"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Đơn thuốc cần dùng"/>
        <EditText
            android:fontFamily="@font/cabin"

            android:id="@+id/tv7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:textSize="16dp"
            android:background="@drawable/skip_button"
            android:drawablePadding="8dp"
            android:drawableTint="@color/themeColor"
            android:hint="Đơn thuốc cần dùng"
            android:paddingTop="10dp"
            android:paddingLeft="16dp"
            android:inputType="textEmailAddress"
            android:paddingRight="35dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:fontFamily="@font/cabin"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Chuẩn đáng cuối cùng"/>

        <Spinner
            android:fontFamily="@font/cabin"

            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="50dp"
            android:id="@+id/spinnerdata"
            android:textAlignment="center"/>


        <Button
            android:fontFamily="@font/cabin"
            android:textAllCaps="false"

            android:id="@+id/btn_postsdfds"
            style="@style/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="100dp"
            android:text="Xác nhận"
            android:textColor="@android:color/white"
            android:theme="@style/Button.White" />

    </LinearLayout>
</ScrollView>