<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"
        tools:context=".Profile_Doctor"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/layoutOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="visible">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/coverdb"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="@drawable/headerbanner"
                        android:scaleType="fitXY"></ImageView>
                    <ImageView
                        android:id="@+id/backc"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_back"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <LinearLayout
                        android:id="@+id/ooo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="97dp">

                        <LinearLayout
                            android:paddingLeft="25dp"
                            android:paddingRight="120dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="#0966C0">
                            <TextView
                                android:fontFamily="@font/cabin"

                                android:layout_marginRight="200dp"
                                android:id="@+id/nametvdb"
                                android:text="Name"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"/>

                            <TextView
                                android:fontFamily="@font/cabin"

                                android:id="@+id/emailtvdb"
                                android:text="Email"
                                android:textSize="13dp"
                                android:textColor="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"/>



                        </LinearLayout>
                    </LinearLayout>
                    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="80dp"
                        android:layout_marginRight="25dp"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:id="@+id/avatar_db"
                        app:c_background_color="@null"
                        android:src="@drawable/ic_face"/>
                    <LinearLayout
                        android:id="@+id/iii"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_marginRight="110dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ooo">

                        <TextView
                            android:fontFamily="@font/cabin"
                            android:gravity="center_vertical"
                            android:id="@+id/ooop"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Email"
                            android:textSize="16dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@+id/iii"
                        android:padding="10dp">

                        <TextView
                            android:layout_marginTop="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:id="@+id/Desc"
                            android:textSize="17dp"
                            android:layout_marginBottom="10dp"
                            android:background="#808080"/>

                        <TextView
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/cabin"

                            android:textColor="@color/black"
                            android:id="@+id/tvv12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Họ và tên : "/>
                        <TextView
                            android:fontFamily="@font/cabin"

                            android:id="@+id/tvv13"
                            android:textSize="16dp"
                            android:textColor="@color/grey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Giới tính : "/>

                        <TextView
                            android:fontFamily="@font/cabin"

                            android:id="@+id/tvv14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ngày sinh : "
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/grey"
                            android:textSize="16dp" />
                        <TextView
                            android:fontFamily="@font/cabin"
                            android:id="@+id/tvv20"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Chuyên khoa : "
                            android:textColor="@color/black"
                            android:textSize="16dp" />
                        <TextView
                            android:fontFamily="@font/cabin"
                            android:textStyle="bold"

                            android:id="@+id/tvv15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Địa chỉ phòng khám : "
                            android:layout_marginBottom="10dp"

                            android:textColor="@color/black"
                            android:textSize="16dp" />
<!--                        <TextView-->
<!--                            android:id="@+id/tvv16"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="Chiều cao:"-->
<!--                            android:layout_marginBottom="10dp"-->
<!--                            android:textColor="@color/purple_700"-->
<!--                            android:textSize="20dp" />-->
                        <TextView
                            android:fontFamily="@font/cabin"
                            android:id="@+id/tvv17"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hình thức hoạt động : "
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/grey"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tvv18"
                            android:fontFamily="@font/cabin"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Quá trình học tập và làm việc : "
                            android:textColor="@color/grey"
                            android:textSize="16dp" />

                        <TextView
                            android:fontFamily="@font/cabin"
                            android:textStyle="bold"

                            android:id="@+id/tvv19"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Giấy chứng nhận hành y"
                            android:textColor="@color/black"
                            android:textSize="16dp" />
                        <ImageView
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/imag2">

                        </ImageView>

                    </LinearLayout>


                </RelativeLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:background="@color/white"
                android:textColor="#0966C0"
                android:textStyle="bold"
                android:fontFamily="@font/cabin"
                android:id="@+id/tvcontent1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:gravity="center"
                android:drawablePadding="8dp"
                android:layout_alignParentBottom="true"
                android:text="Cập nhật"
                android:paddingTop="10dp"
                android:paddingLeft="35dp"
                android:inputType="textEmailAddress"
                android:paddingRight="35dp"
                android:paddingBottom="10dp"/>

            <TextView
                android:background="@color/white"
                android:textColor="#0966C0"
                android:textStyle="bold"
                android:fontFamily="@font/cabin"
                android:id="@+id/tvcontent2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="10dp"
                android:textSize="16dp"
                android:gravity="center"
                android:drawablePadding="8dp"
                android:layout_alignParentBottom="true"
                android:text="Quản lý bài viết"
                android:paddingTop="10dp"
                android:paddingLeft="35dp"
                android:inputType="textEmailAddress"
                android:paddingRight="35dp"
                android:paddingBottom="10dp"/>
        </LinearLayout>
    </RelativeLayout>