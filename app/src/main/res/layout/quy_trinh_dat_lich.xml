<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#F3EFEF"
        android:id="@+id/layoudraww"
        android:layout_height="match_parent"
        tools:context=".QuyTrinhDatLich">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/layoutOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="visible">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="#0966C0"
                            android:orientation="horizontal"
                            android:padding="15dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="26dp">

                                <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                                    android:id="@+id/cat_img"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"
                                    android:background="@drawable/hi" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/tvNmae"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/cabin"
                                android:gravity="left"
                                android:text="Quy trình đặt lịch"
                                android:textColor="@color/white"
                                android:textSize="28dp"
                                android:textStyle="bold" />


                        </LinearLayout>



                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/cabin"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:text="\t\t\tBước 1"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                    <TextView
                        android:fontFamily="@font/cabin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="\t\t\tVào tìm kiếm chọn và bác sĩ mà bạn muốn khám."
                        android:textColor="@color/grey"
                        android:textSize="16sp"/>
                    <TextView
                        android:textColor="@color/grey"
                        android:text="___________________________________________________"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/cabin"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:text="\t\t\tBước 2"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                    <TextView
                        android:fontFamily="@font/cabin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="\t\t\tVào tìm kiếm chọn những lịch khám mà bác sĩ đã tạo và đăng lên."
                        android:textColor="@color/grey"
                        android:textSize="16sp"/>
                    <TextView
                        android:textColor="@color/grey"
                        android:text="___________________________________________________"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/cabin"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:text="\t\t\tBước 3"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                    <TextView
                        android:fontFamily="@font/cabin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="\t\t\tNhập đầy đủ các thông tin cần thiết cho lịch hẹn."
                        android:textColor="@color/grey"
                        android:textSize="16sp"/>

                    <TextView
                        android:textColor="@color/grey"
                        android:text="___________________________________________________"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/cabin"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:text="\t\t\tBước 4"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                    <TextView
                        android:fontFamily="@font/cabin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="\t\t\t..."
                        android:textColor="@color/grey"
                        android:textSize="16sp"/>


                </LinearLayout>

            </androidx.core.widget.NestedScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </RelativeLayout>