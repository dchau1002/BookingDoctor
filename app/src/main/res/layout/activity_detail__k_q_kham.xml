<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Detail_KQKham">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toobarchat"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:background="@color/white"
                android:theme="@style/AppTheme">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left">
                    <ImageButton
                        android:id="@+id/backc"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_back"
                        android:layout_width="wrap_content"
                        android:background="@color/white"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>


            <TextView
                android:fontFamily="@font/cabin"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Kết quả khám bệnh "
                android:textSize="25dp"
                android:layout_marginBottom="12dp"
                android:textStyle="bold" />

            <LinearLayout
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/white">
                <TextView
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/cabin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#0966C0"
                    android:layout_marginBottom="5dp"
                    android:text="Kết quả "/>
                <TextView
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/cabin"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:id="@+id/tvv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vào ngày :"/>
                <TextView
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/cabin"
                    android:id="@+id/tvv2"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vào giờ : "/>

                <TextView
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:id="@+id/tvv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên hồ sơ : "
                    android:textColor="@color/black"
                    android:textSize="16dp" />
                <TextView
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/cabin"
                    android:textStyle="bold"
                    android:id="@+id/tvv13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chuẩn đoán ban đầu : "
                    android:textColor="@color/black"
                    android:textSize="16dp" />
                <TextView
                    android:fontFamily="@font/cabin"
                    android:layout_marginBottom="10dp"
                    android:textStyle="italic"
                    android:id="@+id/tvv14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nguồn gốc : "
                    android:textColor="@color/grey"
                    android:textSize="16dp" />
                <TextView
                    android:fontFamily="@font/cabin"
                    android:layout_marginBottom="10dp"
                    android:textStyle="italic"
                    android:id="@+id/tvv15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nguyên nhân : "
                    android:textColor="@color/grey"
                    android:textSize="16dp" />
                <TextView
                    android:fontFamily="@font/cabin"
                    android:layout_marginBottom="10dp"

                    android:textStyle="bold"
                    android:id="@+id/tvv16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chuẩn đoán cuối cùng :"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
                <TextView
                    android:textStyle="bold"
                    android:fontFamily="@font/cabin"
                    android:layout_marginBottom="10dp"

                    android:id="@+id/tvv17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đơn thuốc : "
                    android:textColor="@color/black"
                    android:textSize="16dp" />
                <TextView
                    android:fontFamily="@font/cabin"

                    android:textStyle="bold"
                    android:id="@+id/tvv4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lời khuyên : "
                    android:textColor="@color/black"
                    android:textSize="16dp" />


            </LinearLayout>


            <LinearLayout
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/white">

                <TextView
                    android:textStyle="bold"
                    android:fontFamily="@font/cabin"
                    android:gravity="center"
                    android:id="@+id/tvv5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Thông tin bác sĩ"
                    android:textSize="20dp"
                    android:textColor="#0966C0"
                    android:layout_marginBottom="5dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"

                    android:orientation="horizontal">

                    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                        android:id="@+id/image11"
                        android:src="@drawable/ic_face"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        />

                    <LinearLayout
                        android:layout_marginStart="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/image11"
                        android:orientation="vertical">

                        <TextView
                            android:fontFamily="@font/cabin"
                            android:id="@+id/tvv6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Person Name"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                        <TextView
                            android:fontFamily="@font/cabin"

                            android:id="@+id/tvv7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="15"
                            android:text="sdass"
                            android:textColor="@color/grey"
                            android:textSize="16dp"
                            android:textStyle="italic" />
                    </LinearLayout>
                </RelativeLayout>
                <TextView                            android:layout_marginBottom="10dp"

                    android:fontFamily="@font/cabin"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:id="@+id/tvv8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chuyên khoa : "/>

                <TextView
                    android:fontFamily="@font/cabin"

                    android:layout_marginBottom="10dp"
                    android:id="@+id/tvv9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giới tính : "
                    android:textColor="@color/grey"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/tvv10"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/cabin"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngày sinh : "
                    android:textColor="@color/grey"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/tvv11"
                    android:fontFamily="@font/cabin"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ : "
                    android:textColor="@color/grey"
                    android:paddingBottom="20dp"
                    android:textSize="16dp" />
                <TextView

                    android:gravity="center"
                    android:fontFamily="@font/cabin"
                    android:background="#0966C0"
                    android:textColorHint="#FFFFFF"
                    android:id="@+id/bn3"
                    android:layout_gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="16dp"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/themeColor"
                    android:hint="Nhắn tin"
                    android:inputType="textEmailAddress"
                    android:minLines="6"
                    android:padding="16dp"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
            </LinearLayout>

            <Button
                android:fontFamily="@font/cabin"
                android:id="@+id/btn_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="80dp"
                android:layout_marginTop="40dp"
                android:theme="@style/Button.White"
                android:textColor="@android:color/white"
                android:text="Trở về "
                style="@style/loginButton"
                android:layout_marginBottom="100dp"/>

        </LinearLayout>
    </ScrollView>