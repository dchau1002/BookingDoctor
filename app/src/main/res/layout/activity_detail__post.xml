<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
         android:background="@color/white"
        android:layout_height="match_parent"
        tools:context=".Detail_Post">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/layoutOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="visible">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/coverdb"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:background="@drawable/headerbanner"
                        android:scaleType="fitXY"></ImageView>

                    <ImageView
                        android:id="@+id/backc"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_back" />

                    <LinearLayout
                        android:id="@+id/ooo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="255dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#0966C0"
                            android:orientation="vertical"
                            android:paddingLeft="25dp"
                            android:paddingRight="120dp">

                            <TextView
                                android:fontFamily="@font/cabin"
                                android:id="@+id/nametvdb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="200dp"
                                android:text="Name"
                                android:textColor="@color/white"
                                android:textSize="18dp" />

                            <TextView
                                android:fontFamily="@font/cabin"

                                android:id="@+id/emailtvdb"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:text="Email"
                                android:textColor="@color/white"
                                android:textSize="13dp" />


                        </LinearLayout>
                    </LinearLayout>

                    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                        android:id="@+id/avatar_db"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="230dp"
                        android:layout_marginRight="25dp"
                        android:src="@drawable/ic_face"
                        app:c_background_color="@null" />

                    <LinearLayout
                        android:id="@+id/iii"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ooo"
                        android:layout_marginRight="110dp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:fontFamily="@font/cabin"

                            android:id="@+id/ooop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:padding="10dp"
                            android:paddingRight="10dp"
                            android:text="dconghau1002@gmail.com"
                            android:textSize="16dp" />

                        <TextView
                            android:fontFamily="@font/cabin"
                            android:id="@+id/tilte"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ooop"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="130dp"
                            android:text="Nội dung : "
                            android:textColor="#000000"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:fontFamily="@font/cabin"

                            android:id="@+id/mota"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Desc"
                            android:layout_marginTop="5dp"
                            android:text="Nội dung : "
                            android:textColor="@color/grey"
                            android:textSize="16dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iii"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:fontFamily="@font/cabin"
                            android:id="@+id/ct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="130dp"
                            android:text="Nội dung : "
                            android:textColor="#111112"
                            android:textSize="16dp" />


                    </LinearLayout>


                </RelativeLayout>


            </androidx.core.widget.NestedScrollView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/lfffdsf"

        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:background="@color/white"
            android:textColor="#0966C0"
            android:textStyle="bold"
            android:fontFamily="@font/cabin"
            android:id="@+id/tvcontent1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:paddingLeft="35dp"
            android:paddingTop="10dp"
            android:paddingRight="35dp"
            android:paddingBottom="10dp"
            android:text="Cập nhật"
            android:textSize="16dp" />

        <TextView
            android:background="@color/white"
            android:textColor="#0966C0"
            android:textStyle="bold"
            android:fontFamily="@font/cabin"
            android:id="@+id/tvcontent2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="10dp"
            android:textSize="16dp"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:layout_alignParentBottom="true"
            android:text="Xóa"
            android:paddingTop="10dp"
            android:paddingLeft="35dp"
            android:inputType="textEmailAddress"
            android:paddingRight="35dp"
            android:paddingBottom="10dp"/>

    </LinearLayout>
    </RelativeLayout>