<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    tools:context=".Details_Lichkham_Doctor"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/layoutOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="visible">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/coverdb"
            android:layout_width="match_parent"
            android:layout_height="140dp"
           android:background="@drawable/headerbanner"
            android:scaleType="fitXY"></ImageView>
        <ImageView
            android:id="@+id/backc"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_back"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <LinearLayout
            android:id="@+id/ooo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="97dp">

            <LinearLayout
                android:paddingLeft="25dp"
                android:paddingRight="120dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#0966C0">
                <TextView
                    android:fontFamily="@font/cabin"

                    android:textColorHint="#0966C0"
                    android:layout_marginRight="200dp"
                    android:id="@+id/nametvdb"
                    android:text="Name"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/emailtvdb"
                    android:text="Email"
                    android:textSize="13dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"/>



            </LinearLayout>
        </LinearLayout>
        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:layout_alignParentRight="true"
            android:layout_marginTop="80dp"
            android:layout_marginRight="25dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/avatar_db"
            app:c_background_color="@null"
            android:src="@drawable/ic_face"/>
        <LinearLayout
            android:id="@+id/iii"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_marginRight="110dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ooo">

            <TextView
                android:fontFamily="@font/cabin"

                android:id="@+id/ooop"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="ádas"
                android:textSize="16dp" />
            <TextView
                android:fontFamily="@font/cabin"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="6dp"


                android:id="@+id/xemcmt"
                android:layout_marginLeft="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhận xét"
                android:textSize="16dp"/>

            <TextView

                android:fontFamily="@font/cabin"
                android:layout_marginLeft="10dp"


                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Desc"
                android:textSize="17dp"
                android:textColor="#808080"
                android:text="Mô tả : "/>


            <TextView
                android:gravity="center"
                style="@style/loginButton"
                android:textStyle="normal"
                android:textColorHint="#FFFFFF"
                android:fontFamily="@font/cabin"
                android:id="@+id/btnhantin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginRight="20dp"
                android:drawableTint="@color/themeColor"
                android:hint="Nhắn tin"
                android:layout_marginStart="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="20dp"
                android:textSize="16dp" />
       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/iii"
            android:padding="10dp">

            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin"
                android:textColor="#0966C0"
                android:textSize="25dp"
                android:gravity="center"
                android:text="Lịch trình của bác sĩ"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/white">

                    <TextView
                        android:fontFamily="@font/cabin"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:layout_marginStart="15dp"
                        android:textStyle="bold"
                        android:textColor="#190702"
                        android:text="Lọc theo ngày"/>


                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white">

                    <Button
                        android:fontFamily="@font/cabin"

                        android:layout_gravity="center"
                        android:id="@+id/datePickerButton"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        style="?android:spinnerStyle"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView"
                        android:layout_marginTop="10dp"
                        android:onClick="openDatePicker"/>


                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/datechoo"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <DatePicker
                        android:id="@+id/datePicker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:calendarViewShown="false"
                        android:datePickerMode="spinner" />
                    <Button
                        android:layout_below="@+id/datePicker"
                        android:id="@+id/btn_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:layout_marginEnd="60dp"
                        android:theme="@style/Button.White"
                        android:textColor="@android:color/white"
                        android:text="Ok"
                        style="@style/loginButton" />
                </RelativeLayout>


            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/cabin"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="7dp"
                    android:textStyle="bold"
                    android:textColor="#190702"
                    android:text="Những lịch khám sắp tới"/>

                <TextView
                    android:fontFamily="@font/cabin"

                    android:id="@+id/loadall"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_marginStart="15dp"
                    android:textStyle="bold"
                    android:textColor="#0966C0"
                    android:text="Xem tất cả"/>
            </RelativeLayout>
            <TextView
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvno"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="#CFCECE"
                android:text="Trống !"/>
       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/rcvlichkham"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

       </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

   </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>