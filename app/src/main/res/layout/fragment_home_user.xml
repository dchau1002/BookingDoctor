<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F3EFEF"
    android:id="@+id/layoudraww"
    android:layout_height="match_parent"
    tools:context=".fragement_User.HomeFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/layoutOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="visible">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:padding="15dp"
                        android:background="#0966C0">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="26dp">
                            <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                                android:id="@+id/cat_img"
                                android:layout_centerHorizontal="true"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/hi"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tvNmae"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:layout_width="match_parent"
                            android:fontFamily="@font/cabin"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="23dp"
                            android:textStyle="bold"
                            android:gravity="left"
                            android:text="..."/>

                    </LinearLayout>
                        <androidx.cardview.widget.CardView
                            android:padding="15dp"
                            android:layout_marginTop="90dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            app:cardCornerRadius="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:padding="20dp"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/ca1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:cardCornerRadius="34dp">
                                        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                                            android:layout_centerHorizontal="true"
                                            android:layout_width="70dp"
                                            android:layout_height="70dp"
                                            android:background="@drawable/doc"/>
                                    </androidx.cardview.widget.CardView>
                                        <TextView
                                            android:fontFamily="@font/cabin"

                                            android:textSize="11dp"
                                            android:layout_marginTop="5dp"
                                            android:gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="Đặt khám\n bác sĩ "/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:gravity="center"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/ca2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:cardCornerRadius="34dp">
                                            <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                                                android:layout_centerHorizontal="true"
                                                android:layout_width="70dp"
                                                android:layout_height="70dp"
                                                android:background="@drawable/h11"/>
                                        </androidx.cardview.widget.CardView>
                                        <TextView
                                            android:fontFamily="@font/cabin"

                                            android:layout_marginTop="5dp"
                                            android:gravity="center"
                                            android:textSize="11dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="Quy trình \n Đặt lịch "/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:gravity="center"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/ca3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:cardCornerRadius="34dp">
                                            <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                                                android:layout_centerHorizontal="true"
                                                android:layout_width="70dp"
                                                android:layout_height="70dp"
                                                android:background="@drawable/h2"/>
                                        </androidx.cardview.widget.CardView>
                                        <TextView
                                            android:fontFamily="@font/cabin"

                                            android:textSize="11dp"
                                            android:layout_marginTop="5dp"
                                            android:gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="Tin tức\nY tế"/>
                                    </LinearLayout>




                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginTop="12dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/ca4"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:cardCornerRadius="34dp">
                                            <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                                                android:layout_centerHorizontal="true"
                                                android:layout_width="70dp"
                                                android:layout_height="70dp"
                                                android:background="@drawable/h3"/>
                                        </androidx.cardview.widget.CardView>
                                        <TextView
                                            android:fontFamily="@font/cabin"

                                            android:textSize="11dp"
                                            android:layout_marginTop="5dp"
                                            android:gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="Câu hỏi\nthắc mắc"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:gravity="center"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/ca5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:cardCornerRadius="34dp">
                                            <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                                                android:layout_centerHorizontal="true"
                                                android:layout_width="70dp"
                                                android:layout_height="70dp"
                                                android:background="@drawable/tuvanjpg"/>
                                        </androidx.cardview.widget.CardView>
                                        <TextView
                                            android:fontFamily="@font/cabin"

                                            android:textSize="11dp"
                                            android:layout_marginTop="5dp"
                                            android:gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="Tư vấn\ntrực tiếp "/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:gravity="center"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/ca6"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:cardCornerRadius="34dp">
                                            <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                                                android:layout_centerHorizontal="true"
                                                android:layout_width="70dp"
                                                android:layout_height="70dp"
                                                android:background="@drawable/kqkham"/>
                                        </androidx.cardview.widget.CardView>
                                        <TextView
                                            android:fontFamily="@font/cabin"
                                            android:textSize="11dp"
                                            android:layout_marginTop="5dp"
                                            android:gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="Kết quả khám "/>
                                    </LinearLayout>




                                </LinearLayout>


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:cardCornerRadius="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.smarteist.autoimageslider.SliderView
                            android:id="@+id/image_slider"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            app:sliderAnimationDuration="600"
                            app:sliderAutoCycleDirection="back_and_forth"
                            app:sliderAutoCycleEnabled="true"
                            app:sliderIndicatorAnimationDuration="600"
                            app:sliderIndicatorGravity="center_horizontal|bottom"
                            app:sliderIndicatorMargin="15dp"
                            app:sliderIndicatorOrientation="horizontal"
                            app:sliderIndicatorPadding="3dp"
                            app:sliderIndicatorRadius="2dp"
                            app:sliderIndicatorSelectedColor="#5A5A5A"
                            app:sliderIndicatorUnselectedColor="#FFF"
                            app:sliderScrollTimeInSec="2"
                            app:sliderStartAutoCycle="true"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cabin"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:text="Thông tin y tế"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rcvposst">

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</RelativeLayout>



